apiVersion: apps/v1
kind: ReplicaSet
metadata:
  name: myapp-replicaset
  labels:
   app: myapp
spec:
  selector:
     matchLabels:
      env: production
      name: nginx
  replicas: 3
  template:
    metadata:
      name: nginx
      labels:
        env: production
        name: nginx
    spec:
      containers:
      - name: nginx
        image: nginx
        resources:
          limits:
            memory: "128Mi"
            cpu: "500m"
        ports:
          - containerPort: 80